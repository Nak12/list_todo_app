<h1>Lista</h1>

<table>
  <thead>
    <tr>
      <th>Lista</th>
      <th>Acesso</th>
      <th>Criador</th>
    </tr>
  </thead>
  <tbody>
    <% @lists.each do |list| %>
      <tr>
        <td><%= list.list_title %></td>
        <td><%= public_private(list.is_private) %></td>
        <td>###</td>
        <td><%= link_to 'Show', list %></td>
        <td><%= link_to 'Edit', edit_list_path(list) %></td>
        <td><%= link_to 'Delete', list, method: :delete, data: {confirm: "Are you sure?"}%></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


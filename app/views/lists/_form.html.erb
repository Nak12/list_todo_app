
<%= form_with(model: list, local: true) do |form| %>
  <% if list.errors.any? %>
    <div>
      <h2><%= pluralize(list.errors.count, "error") %> prohibited this list from being saved:</h2>
      <ul>
        <% list.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group row">
    <h4 class="col-sm-2">
      <%= form.label "Título" %>
    </h4>
    <div class="col-sm-8">
      <%= form.text_field :list_title, required: true, size: 30,  placeholder: "Máximo de 30 caracteres" %>
    </div>
  </div>


  <div class="form-group row">
    <h4 class="col-sm-2"><%= form.label "Privado?" %></h4>
    <div class="col-sm-8"><%= form.check_box :is_private %></div> 
  </div>


  <div class="actions">
    <%= form.submit class: "btn btn-success"%>
  </div>
  
<% end %>


